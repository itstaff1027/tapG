# Track the current state (on or off)
var current_state = \"off\"

# AnimationPlayer node path
@export var anim_player: AnimationPlayer

var is_animated = true
func _ready():
	# Set the initial idle animation based on the current state
	# Other initialization code...
	#connect(\"pressed\", Callable(self, \"_on_pressed\"))
	anim_player.play(current_state + \"_idle\")

func set_animation_state(state: String):
	current_state = state
	anim_player.play(current_state + \"_idle\")


# Function to handle button press
func on_pressed(state: String, is_pressed: bool):
	if is_animated:
		anim_player.play(state + \"_pressing\")
		$Timer.start()
		is_animated = false

